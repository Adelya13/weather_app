<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/baseFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.valisheva.weather_app.presentation.fragments.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main"/>
    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.valisheva.weather_app.presentation.fragments.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="ru.valisheva.weather_app.presentation.fragments.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/fragment_details"
        >
        <action
            android:id="@+id/action_detailsFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/baseFragment"
        android:name="ru.valisheva.weather_app.presentation.fragments.BaseFragment"
        android:label="BaseFragment"
        tools:layout="@layout/fragment_base">
        <action
            android:id="@+id/action_baseFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_baseFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
</navigation>